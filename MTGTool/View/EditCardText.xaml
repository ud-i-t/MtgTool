<UserControl x:Class="MTGTool.View.EditCardText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MTGTool.View"
             xmlns:vm="clr-namespace:MTGTool.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:EditCardTextViewModel />
    </UserControl.DataContext>
    
    <StackPanel>
        <TextBox Width="200" Height="400" Text="{Binding Object.SeletedImg.Text}" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"></TextBox>
    </StackPanel>
</UserControl>

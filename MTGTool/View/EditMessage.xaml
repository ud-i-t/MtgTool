<UserControl x:Class="MTGTool.View.EditMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MTGTool.View"
             xmlns:vm="clr-namespace:MTGTool.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:EditMessageViewModel></vm:EditMessageViewModel>
    </UserControl.DataContext>
    <StackPanel>
        <WrapPanel>
            <TextBlock Text="メッセージ：" Width="150"></TextBlock>
            <TextBox Text="{Binding Path=Msg.message.Text}" Width="200"></TextBox>
        </WrapPanel>
        <WrapPanel>
            <TextBlock Text="表示秒数：" Width="150"></TextBlock>
            <TextBox Text="{Binding Path=Msg.message.Time}" Width="200"></TextBox>
        </WrapPanel>
    </StackPanel>
</UserControl>
